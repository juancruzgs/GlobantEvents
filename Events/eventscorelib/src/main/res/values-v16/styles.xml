<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="GlobantMainTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="fab_layout_wrap_width_wrap_height_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fab_action_button_base_style" parent="fab_layout_wrap_width_wrap_height_style" />

    <style name="fab_action_button_style" parent="fab_action_button_base_style">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

    <style name="condensed_light_small">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="condensed_normal_small">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="condensed_bold_small">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="condensed_light_medium">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="condensed_normal_medium">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="condensed_bold_medium">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="condensed_light_large">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
