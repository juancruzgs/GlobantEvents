<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.globant.eventscorelib.SpeakerFragment"
        android:weightSum="1"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/header"
                android:src="@mipmap/placeholder"
                android:background="#ffd5d5d5"
                />

            <com.software.shell.fab.ActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/header"
                android:layout_marginBottom="-32dp"
                android:layout_marginRight="20dp"
                fab:image="@mipmap/ic_add_photo_white"
                fab:image_size="24dp"
                fab:button_color="#FFC107"
                android:layout_alignParentEnd="false"/>

            <LinearLayout
                android:id="@+id/body"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header"
                android:layout_marginTop="35dp"
                android:layout_weight="0.7">

                <!--card view first/last name/title-->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <!--layout first/last name/ title-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <!--first name-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/first_name"
                            android:paddingBottom="8dp"
                            android:layout_weight="0.1"
                            android:minHeight="56dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/icon_first_name"
                                android:src="@mipmap/ic_first_name"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.baseComponents.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutFirstName"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName"
                                    android:ems="10"
                                    android:id="@+id/edit_text_first_name"
                                    android:hint="@string/edit_text_first_name_hint"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.baseComponents.ErrorLabelLayout>
                        </LinearLayout> <!--end first name-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>
                        <!--last  name-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/last_name"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_last_name"
                                android:src="@mipmap/ic_last_name"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.baseComponents.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutLastName"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText

                                    style="@style/condensed_normal_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName"
                                    android:ems="10"
                                    android:hint="@string/edit_text_last_name_hint"
                                    android:id="@+id/edit_text_last_name"
                                    android:layout_gravity="center_vertical"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.baseComponents.ErrorLabelLayout>
                        </LinearLayout><!--end last name-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/title"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_title"
                                android:src="@mipmap/ic_diploma"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.baseComponents.ErrorLabelLayout
                                android:id="@+id/titleLayoutLastName"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText

                                    style="@style/condensed_normal_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName"
                                    android:ems="10"
                                    android:hint="@string/edit_text_title_hint"
                                    android:id="@+id/edit_text_title"
                                    android:layout_gravity="center_vertical"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.baseComponents.ErrorLabelLayout>
                        </LinearLayout>
                    </LinearLayout>  <!--end layout card view first/last name/title-->
                </android.support.v7.widget.CardView> <!--end card view first/last name/title-->
                <!--card view biography-->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_biography"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <!--layout biography 1-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <!--layout biography 2-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/biography"
                            android:paddingBottom="8dp"
                            android:layout_weight="0.1"
                            android:minHeight="56dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/icon_biography"
                                android:src="@mipmap/ic_biography"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.baseComponents.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutBiography"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:lines="8"
                                    android:ems="10"
                                    android:id="@+id/edit_text_biography"
                                    android:hint="@string/edit_text_biography_hint"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.baseComponents.ErrorLabelLayout>
                        </LinearLayout> <!--end biography layout 2-->
                    </LinearLayout> <!--end layout biography 1-->
                </android.support.v7.widget.CardView><!--end card view biograpy-->
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

