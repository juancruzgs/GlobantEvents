<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_lighter"
    tools:context="com.globant.eventscorelib.baseFragments.BaseSpeakerDetailFragment">

    <ScrollView
        android:id="@+id/scrollViewSpeakerDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/speaker_picture"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@mipmap/placeholder"
                    android:scaleType="centerCrop"
                    android:transitionName="cardImage"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#82000000"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/speaker_fullName"
                android:textSize="35sp"
                style="@style/condensed_normal_large"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/condensed_normal_medium"
                android:id="@+id/speaker_title"
                android:textColor="#ffafafaf"/>
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/speaker_biography"
                style="@style/condensed_normal_small"
                android:singleLine="false"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
