
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        tools:context="com.globant.eventmanager.fragments.EventsFragment"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/event_header"
                android:src="@mipmap/ic_insert_photo"
                android:background="@color/grey_lighter"
                />

            <com.software.shell.fab.ActionButton
                android:id="@+id/event_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/event_header"
                android:layout_marginBottom="-32dp"
                android:layout_marginRight="20dp"
                fab:image="@mipmap/ic_insert_photo_white"
                fab:image_size="24dp"
                fab:button_color="@color/ambar"
                android:layout_alignParentEnd="false"/>

            <LinearLayout
                android:id="@+id/body"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/event_header"
                android:layout_weight="0.7"
                android:layout_marginTop="35dp">


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_descriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/elevation_event_card_row"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/layout_title"
                            android:paddingBottom="8dp"
                            android:layout_weight="0.1"
                            android:minHeight="56dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/icon_title"
                                android:src="@mipmap/ic_event_title"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutTitle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textShortMessage"
                                    android:ems="10"
                                    android:id="@+id/edit_text_title"
                                    android:hint="@string/edit_text_title_hint"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/layout_short_description"
                            android:paddingBottom="8dp"
                            android:layout_weight="0.1"
                            android:minHeight="56dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/icon_short_description"
                                android:src="@mipmap/ic_short_description"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutShortDescription"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textShortMessage"
                                    android:ems="10"
                                    android:id="@+id/edit_text_short_description"
                                    android:hint="@string/edit_text_short_description_hint"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/last_name"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_full_description"
                                android:src="@mipmap/ic_description"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutFullDescription"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">

                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textMultiLine"
                                    android:ems="10"
                                    android:hint="@string/edit_text_full_description_hint"
                                    android:id="@+id/edit_text_full_description"
                                    android:layout_gravity="center_vertical"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>


                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_additional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/elevation_event_card_row"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/layout_additional"
                            android:paddingBottom="8dp"
                            android:layout_weight="0.1"
                            android:minHeight="56dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/icon_additional_info"
                                android:src="@mipmap/ic_additional_info"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutAdditionalInfo"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textShortMessage"
                                    android:ems="10"
                                    android:id="@+id/edit_text_additional_info"
                                    android:hint="@string/texView_Add_Info_Title"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/layout_hashtag"
                            android:paddingBottom="8dp"
                            android:layout_weight="0.1"
                            android:minHeight="56dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/icon_hashtag"
                                android:src="@mipmap/ic_hashtag"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutHashtag"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapWords"
                                    android:ems="10"
                                    android:id="@+id/edit_text_hashtag"
                                    android:hint="@string/text_view_hashtag"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/category"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_category"
                                android:src="@mipmap/ic_category"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutCategory"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">

                                <android.support.v7.widget.AppCompatSpinner
                                        android:id="@+id/CategorySpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:prompt="@string/edit_text_category_hint"
                                        android:spinnerMode="dropdown" />
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/isPublic"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_public"
                                android:src="@mipmap/ic_public"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutPublic"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">

                                <android.support.v7.widget.AppCompatSpinner
                                        android:id="@+id/PublicSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:prompt="@string/edit_text_public_hint"
                                        android:spinnerMode="dropdown" />
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/language"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_language"
                                android:src="@mipmap/ic_language"
                                android:layout_weight="0.1"
                                android:layout_gravity="center_vertical"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutLanguage"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">

                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:ems="10"
                                    android:hint="@string/textView_Event_Language_Title"
                                    android:id="@+id/edit_text_language"
                                    android:layout_gravity="center_vertical"
                                    android:paddingTop="15dp"
                                    android:background="#00000000"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>


                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/elevation_event_card_row"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/layoutstart_date"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_start_date"
                                android:src="@mipmap/ic_event_start_date"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.3"/>


                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutStartDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:ems="10"
                                    android:id="@+id/edit_text_start_date"
                                    android:hint="@string/edit_text_start_date_hint"
                                    android:layout_gravity="center_vertical"
                                    android:background="#00000000"
                                    android:paddingTop="15dp"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_start_time"
                                android:src="@mipmap/ic_start_time"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.3"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutStartTime"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:ems="10"
                                    android:id="@+id/edit_text_start_time"
                                    android:hint="@string/edit_text_start_time_hint"
                                    android:layout_gravity="center_vertical"
                                    android:background="#00000000"
                                    android:paddingTop="15dp"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/layout_end_date_time"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_end_date"
                                android:src="@mipmap/ic_event_end_date"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.3"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutEndDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:ems="10"
                                    android:id="@+id/edit_text_end_date"
                                    android:hint="@string/edit_text_end_date_hint"
                                    android:layout_gravity="center_vertical"
                                    android:background="#00000000"
                                    android:paddingTop="15dp"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_end_time"
                                android:src="@mipmap/ic_end_time"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.3"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorLayoutEndTime"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:ems="10"
                                    android:id="@+id/edit_text_end_time"
                                    android:hint="@string/edit_text_end_time_hint"
                                    android:layout_gravity="center_vertical"
                                    android:background="#00000000"
                                    android:paddingTop="15dp"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/elevation_event_card_row"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/layout_map"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_map"
                                android:src="@mipmap/ic_map"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.1"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorMap"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPostalAddress"
                                    android:ems="10"
                                    android:id="@+id/edit_text_map"
                                    android:hint="@string/action_map"
                                    android:layout_gravity="center_vertical"
                                    android:background="#00000000"
                                    android:paddingTop="15dp"/>
                            </com.globant.eventscorelib.utils.ErrorLabelLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/grey"
                            android:layout_marginLeft="65dp">
                        </View>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:minHeight="56dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:id="@+id/layout_address"
                            android:layout_weight="0.1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/icon_address"
                                android:src="@mipmap/ic_location"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.1"/>
                            <com.globant.eventscorelib.utils.ErrorLabelLayout
                                android:id="@+id/nameErrorAddress"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp">
                                <android.support.v7.widget.AppCompatEditText
                                    style="@style/condensed_normal_small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName"
                                    android:ems="10"
                                    android:id="@+id/edit_text_address"
                                    android:hint="@string/textView_Event_Address_Title"
                                    android:layout_gravity="center_vertical"
                                    android:background="#00000000"
